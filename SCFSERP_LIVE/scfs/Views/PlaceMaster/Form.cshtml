

@using scfs_erp.Models;
@model scfs_erp.Models.PlaceMaster

@{
    ViewBag.Title = "Place Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Place Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                @*<form action="@Url.Content("~/PlaceMaster/savedata")" method="post" accept-charset="utf-8" id="placemasterform" data-ng-controller="myController" name="placemasterform">*@
                <form>
                    @Html.ValidationSummary(true)
                    <fieldset id="placeMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.PLCID, new { @class = "form-control  PLCID", @id = "PLCID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.PLCCODE)*@
                                        @Html.TextBoxFor(model => Model.PLCCODE, new { @class = "form-control PLCCODE", @id = "PLCCODE" })
                                        <input type="text" value="@Model.PLCCODE" name="i_PLCCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.PLCDESC)*@
                                        @Html.TextBoxFor(model => Model.PLCDESC, new { @class = "form-control  PLCDESC", @id = "PLCDESC" })
                                        <input type="text" value="@Model.PLCDESC" name="i_PLCDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
        <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <a href="@Url.Action("Index", "PlaceMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#btnsave').click(function () {
            if ($('#PLCCODE').val() == "") {
                alert('Please Enter Code !!');
                $('#PLCCODE').focus();
                return false;
            }
            if ($('#PLCDESC').val() == "") {
                alert('Please Enter Description !!');
                $('#PLCDESC').focus();
                return false;
            }

            var pdate = new Date();

            if ($('#PLCID').val() == "") { $('#PLCID').val(0); }

            var tab = {
                PLCID: $('#PLCID').val(),
                PLCCODE: $('#PLCCODE').val(),
                PLCDESC: $('#PLCDESC').val(),
                DISPSTATUS: $('#DISPSTATUS').val(),
                CUSRID: "",
                LMUSRID: 1,
                PRCSDATE: pdate
            };
            $.ajax({
                url: "/PlaceMaster/savedata",
                data: JSON.stringify(tab),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (status) {
                    if (status == "Update") {
                        alert('Place Master Details Updated Successfully !! ');

                        var returnurl = "@Url.Action("Index", "PlaceMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Success") {
                        alert('Place Master Details Inserted Successfully !! ');
                        var returnurl = "@Url.Action("Index", "PlaceMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Existing") {
                        alert('Place Master Details Already Inserted !! ');
                        $('#PRDTGCODE').val("");
                        $('#PRDTGDESC').val("");
                        var returnurl = "@Url.Action("Form", "PlaceMaster")";
                        window.location.href = returnurl;
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });

        });
    </script>

}

