@{
    ViewBag.Title = "Bill Of Entry";
}

<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-import"></i><strong>@ViewBag.Title</strong>
                                <a class="btn btn-success btn-sm pull-right hide" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "BillOfEntry")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>
                    <div class="box-content no-padding">
                        <div class="row">
                            <div class="col-xs-3"> </div>
                            <div class="col-xs-6">
                                <form action="#" method="post" accept-charset="utf-8" id="exportgateinform" data-ng-controller="myController" name="exportgateinform">
                                    <label for="from">From</label>
                                    <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                    <label for="to">to</label>
                                    <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                    <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                </form>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                            <thead>
                                <tr>


                                    <th>
                                        Date
                                    </th>
                                    <th>Time</th>
                                    <th>
                                        Reg. No
                                    </th>
                                    <th>
                                        BOE No
                                    </th>
                                    <th>
                                        CHA Name
                                    </th>

                                    <th>
                                        NOC
                                    </th>
                                    <th>S</th>
                                    <th></th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {

    <script>


        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "BillOfEntry")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                        { "sName": "", "sClass": "col-md-2 " }, { "sName": "", "sClass": "col-md-1 " },
                        { "sName": " ", "sClass": "col-md-2" },
                            { "sName": "", "sClass": "col-md-2 " },
                            { "sName": "", "sClass": "col-md-4 " },

                        { "sName": " ", "sClass": "col-md-2 " },
                            { "sName": "", "sClass": "col-md-1 " },
                                      {
                                          "sClass": "col-md-1 cent",
                                          "sName": "ID",
                                          "bSearchable": false,
                                          "bSortable": false,
                                          "fnRender": function (oObj) {
                                              return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Form", "BillOfEntry")/' +
                                              oObj.aData[7] + '\"  "><i class="glyphicon glyphicon-edit" style="font-size:small"></i></a>  &nbsp;&nbsp;  <a   class="btn btn-info hide btn-xs"   href="@Url.Action("Form", "BillOfEntrySealDetails")/' +
                                              oObj.aData[7] + '\"  ">Seal</a>  &nbsp;&nbsp;<a  class="btn btn-danger hide del btn-xs" href="#" id="' +
                                              oObj.aData[7] + '\" ><i class="glyphicon glyphicon-trash" style="font-size:small "></i> </a> ';
                                          }
                                      }

                ]
            });

            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });
            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });




            //----------------Delete button click event----
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/BillOfEntry/Del",
                          {
                              id: idx, fld: "BillOfEntry"
                          },
                         function (data, status) {
                             alert(data);
                             if (data == "Deleted successfully...")
                                 location.replace(base + "/BillOfEntry");
                         });
                }
                return false;
            });//----End of delete
        });//---End of ready function
    </script>
}
