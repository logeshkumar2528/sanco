
@{
    ViewBag.Title = "Shutout Vehicle Ticket";
}
<style>
    .dropdown-menu li a {
        width: 50px;
    }
</style>

<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">

                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-export"></i>&nbsp;@ViewBag.Title
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "ShutoutVehicleTicket")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-1"> </div>
                        <div class="col-xs-12">
                            <form action="#" method="post" accept-charset="utf-8" id="remotegateinform" data-ng-controller="myController" name="remotegateinform">
                                <div class="row">
                                    <div class="col-md-12">
                                        
                                        <div class="col-md-1">
                                            <label for="from">From</label>
                                            <div class="form-group">
                                                <input type="text" id="from" name="from" class="form-control" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <label for="from">To</label>
                                            <div class="form-group">
                                                <input type="text" id="to" name="to" class="form-control" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <label for="from"></label>
                                            <div class="form-group">
                                                <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                            </div>
                                        </div>

                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>

                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Date
                                </th>
                                <th>
                                    No
                                </th>

                                <th>
                                    CHA 
                                </th>
                                <th>
                                    Product
                                </th>
                                <th>
                                    Stuff No
                                </th>
                               

                                <th>
                                    Vehicle No
                                </th>
                                <th>
                                    Qty
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <th colspan="12" style="text-align:center"></th>
                            </tr>

                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "ShutoutVehicleTicket")",
                "bProcessing": true,
                "bStateSave": true,
                //"aaSorting": [[1, "asc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "", "sClass": "col-lg-2" },
                    { "sName": "", "sClass": "col-lg-1" },
                    { "sName": "", "sClass": "col-lg-2" },
                    { "sName": " ", "sClass": "col-lg-3" },
                    { "sName": "", "sClass": "col-lg-1" },
                    
                    { "sName": "", "sClass": "col-lg-2" },                    
                    { "sName": "", "sClass": "col-lg-2" },
                    {
                        "sClass": "col-sm-1 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                             return ' <a class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "ShutoutVehicleTicket")/' +
                                    oObj.aData[7]  + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("PrintView", "ShutoutVehicleTicket")/' +
                                    oObj.aData[7] + '" target="_blank"  ><i class="glyphicon glyphicon-print"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[7] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';


                        }
                    }
                ],
                "fnFooterCallback": function (nRow, aaData, iStart, iEnd, aiDisplay) {
                    var TNOS = 0; var FNOS = 0; var TUES = 0;

                    for (var i = 0; i < aaData.length; i++) {
                        // alert(aaData[4]);

                    }

                    for (var i = 0; i < aaData.length; i++) {
                        //alert("2" + aaData[aiDisplay[i]][3]);
                        if (aaData[aiDisplay[i]][3] == 20) TNOS++;
                        if (aaData[aiDisplay[i]][3] == 40) FNOS++;
                        TUES = eval(TNOS) + eval(2 * FNOS);
                        //  iPageMarket += aaData[aiDisplay[i]][4] * 1;
                    }

                    /* Modify the footer row to match what we want */
                    var nCells = nRow.getElementsByTagName('th'); nCells[0].innerHTML = '<span style="color:red">20":</span>' + eval(TNOS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '<span style="color:red">40":</span>' + eval(FNOS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '<span style="color:red">TUES:</span>' + eval(TUES)

                }

            });



            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });
            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });

            GetContainerDetails();
            //------------Delete Record-------------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/ShutoutVehicleTicket/Del",
                        {
                            id: idx, fld: "SHUTOUTVT"
                        },
                        function (data, status) {
                            if (data == "") {
                                alert("You are not Authorized to Delete....!");
                            }
                            else if (data != "Deleted Successfully ...") {
                                alert(data);
                            }
                            else {
                                alert(data);
                                location.replace(base + "/ShutoutVehicleTicket");
                            }
                        });
                }
                return false;
            });//End
        });

        function GetContainerDetails() {
            var fromdate = $("#from").val();
            var todate = $("#to").val(); var sdptid = 1;

            if (fromdate == "") {
                alert('Please Enter From Date !!')
                $("#from").focus();
                return false;
            }

            if (todate == "") {
                alert('Please Enter To Date !!')
                $("#to").focus();
                return false;
            }



        }
    </script>
}
