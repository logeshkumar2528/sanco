@{
    ViewBag.Title = "Stuffing - Edit log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="page-header">Stuffing - Edit log</h2>
            <p class="text-muted">View edit history for Stuffing records. You can filter by STFMID or view all changes.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default" style="border-color: #16a085;">
                <div class="panel-heading" style="background-color: #16a085; color: white;">
                    <h3 class="panel-title"><i class="fa fa-box"></i> Stuffing Edit Log</h3>
                </div>
                <div class="panel-body">
                    <p>View changes captured in <strong>GateInDetailEditLog</strong> for Stuffing operations, including field-wise old and new values, who changed it, and when. Values are shown by version.</p>
                    <form method="get" action="@Url.Action("EditLogStuffing", "Stuffing")" class="form-inline" role="form">
                        <div class="form-group">
                            <label for="stuffing_stfmid" class="control-label">Filter by STFMID (optional)</label>
                            <input type="number" min="1" class="form-control" id="stuffing_stfmid" name="stfmid" placeholder="e.g. 24469" />
                        </div>
                        <button type="submit" class="btn btn-lg" style="background-color: #16a085; color: white; border-color: #138d75;">
                            <i class="fa fa-box"></i> View Edit Log
                        </button>
                    </form>
                    <hr />
                    <p><strong>Or</strong> go back to the <a href="@Url.Action("Index", "Stuffing")">Stuffing Index</a> page.</p>
                </div>
            </div>
        </div>
    </div>
</div>
