

@model IEnumerable<scfs_erp.Models.VehicleMaster>


@{
    ViewBag.Title = "Vehicle Master";
}
<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-name">
                            <i class="glyphicon glyphicon-share"></i><strong>@ViewBag.Title</strong>
                        </div>
                        <div class="box-icons">
                            <button onclick="parent.location = '@Url.Action("Form","VehicleMaster")'; return false;" class="btn-success"> Create New </button>
                        </div>
                        <div class="no-move"></div>
                    </div>

                    <div class="box-content no-padding">
                      
                        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        PNR No

                                    </th>
                                    <th>
                                        Vehicle No

                                    </th>
                                    <th>
                                        Transpoter Name
                                    </th>
                                    <th>
                                        S

                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $('#dataTables-example').dataTable({
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("GetAjaxData", "VehicleMaster")",
            "bProcessing": true,
            "bStateSave": true,
            "aaSorting": [[1, "desc"]],
            "oLanguage": { "sSearch": "Search: " },
            "aoColumns": [
                { "sName": "" },
                { "sName": "", "sClass": "action" },
                { "sName": "", "sClass": "action" },
                { "sName": "", "sClass": "action" },
                {
                    "sClass": "col-sm-1 cent",
                    "sName": "ID",
                    "bSearchable": false,
                    "bSortable": false,
                    "fnRender": function (oObj) {
                        return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "VehicleMaster")/' +
                            oObj.aData[4] + '\" title="Modify"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger btn-xs del" href="#" id="' + oObj.aData[4] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                    }
                }

            ]
        });
            //----------------Delete button click event--------
        $(document).on("click", "a.del", function () {
            var r = confirm("Are you sure to delete this record ?");
            if (r == true) {
                var idx = $(this).attr('id');
                base = window.location.origin;
                $.post(base + "/VehicleMaster/Del",
                    {
                        id: idx, fld: "VEHICLEMASTER"
                    },
                    function (data, status) {
                        alert(data);
                        if (data == "Deleted Successfully ...")
                            location.replace(base + "/VehicleMaster");
                    });

            }
            return false;
        });//---------End of delete


    </script>
}
