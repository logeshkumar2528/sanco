                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="stmr">
                                                        <div class="form-group">
                                                            <label>Steamer</label>

                                                            <input type="text" name="STMRDESC" id="STMRDESC" value="@ViewBag.STMRDESC" class="form-control STMRDESC" autocomplete="on" data-autocomplete-url="/SlabMaster/AutoStreamer" />
                                                            @Html.TextBoxFor(model => Model.STMRID, new { @class = "hide form-control  STMRID", @id = "STMRID" })

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Slab</label>
                                                        @Html.DropDownList("SLABTID", null, "Please select an option", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Charge Type</label>
                                                        @Html.DropDownList("CHRGETYPE", null, "Please select", new { @class = "form-control CHRGETYPE", @id = "CHRGETYPE", @data_val = "true", @data_val_required = "Field is required", @onchange = "GetOperation()" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Size </label>
                                                        @Html.DropDownList("CONTNRSID", null, "Please select", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                    </div>
                                                </div>
                                                @*</div>
                                                    <div class="col-md-12">*@
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Slab Days</label>
                                                        @Html.DropDownList("SDTYPE", null, "Please select", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Yard </label>
                                                        @Html.DropDownList("YRDTYPE", null, "Please select", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Handling Type</label>@*@Html.ValidationMessageFor(model => model.HTYPE)*@
                                                        @Html.DropDownList("HTYPE", null, new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label>Wages </label>@*@Html.ValidationMessageFor(model => model.WTYPE)*@
                                                        @Html.DropDownList("WTYPE", null, "Please select", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                    </div>
                                                </div>
                                                @*</div>
                                                    <div class="col-md-12">*@
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="panel panel-primary" id="job_list">
                                                            <div class="panel-heading navbar-inverse">
                                                                Charge Details<a class="navbar-right  btn-primary" id="add_detail" style="margin-top:-3px;"> <i class="glyphicon  glyphicon-plus-sign  well-sm"></i></a>
                                                            </div>
                                                            <div class="panel-body">
