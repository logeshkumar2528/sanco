
@using scfs_erp.Models;
@model scfs_erp.Models.SlabMaster
@{
    ViewBag.Title = "Slab Master";
}
<section id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
