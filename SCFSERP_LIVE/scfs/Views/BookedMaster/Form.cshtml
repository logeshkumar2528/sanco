@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $('#btnsave').click(function () {
        if ($('#BOOKCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#BOOKCODE').focus();
            return false;
        }
        if ($('#BOOKDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#BOOKDESC').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#BOOKID').val() == "") { $('#BOOKID').val(0); }

        var tab = {
            BOOKID: $('#BOOKID').val(),
            BOOKCODE: $('#BOOKCODE').val(),
            BOOKDESC: $('#BOOKDESC').val(),

            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/BookedMaster/savedata",
            url:"@Url.Action("savedata", "BookedMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Booked Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "BookedMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Booked Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "BookedMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Booked Master Details Already Inserted !! ');
                    $('#BOOKCODE').val("");
                    $('#BOOKDESC').val("");
                    var returnurl = "@Url.Action("Form", "BookedMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
    </script>
}

