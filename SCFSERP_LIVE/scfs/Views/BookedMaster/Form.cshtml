@using scfs_erp.Models;
@model scfs_erp.Models.BookedMaster

@{
    ViewBag.Title = "Booked Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="fa fa-search"></i>
                <strong>Booked Master</strong>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <form action="@Url.Content("~/BookedMaster/savedata")" method="post" accept-charset="utf-8" id="bookedmasterform" data-ng-controller="myController" name="bookedmasterform">

                    <fieldset id="BookedMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.BOOKID, new { @class = "form-control  BOOKID", @id = "BOOKID" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.BOOKCODE, new { @class = "form-control BOOKCODE", @id = "BOOKCODE" })
                                        <input type="text" value="@Model.BOOKCODE" name="i_BOOKDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.BOOKDESC, new { @class = "form-control  BOOKDESC", @id = "BOOKDESC" })
                                        <input type="text" value="@Model.BOOKDESC" name="i_BOOKDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 hidden">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>CUSRID </label>
                                        @Html.TextBoxFor(model => Model.CUSRID, new { @class = "form-control CUSRID", @id = "CUSRID" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>LMUSRID </label>
                                        @Html.TextBoxFor(model => Model.LMUSRID, new { @class = "form-control  LMUSRID readonly", @id = "LMUSRID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control DISPSTATUS", @id = "DISPSTATUS" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                <a href="@Url.Action("Index", "BookedMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                @*<input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>



            </div>
        </div>
    </div>


</div>

