@{
    ViewBag.Title = "Edit log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="page-header">Edit log</h2>
            <p class="text-muted">View edit history for Import Invoice records. Choose a module to view the edit history.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file-invoice"></i> Import Invoice</h3>
                </div>
                <div class="panel-body">
                    <p>View changes captured in <strong>GateInDetailEditLog</strong> for Import Invoice operations, including field-wise old and new values, who changed it, and when.</p>
                    <form method="get" action="@Url.Action("EditLogInvoice", "ImportInvoice")" class="form-inline" role="form">
                        <div class="form-group">
                            <label for="tranmid" class="control-label">Filter by TRANMID (optional)</label>
                            <input type="number" min="1" class="form-control" id="tranmid" name="tranmid" placeholder="e.g. 100180" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-file-invoice"></i> Import Invoice
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

