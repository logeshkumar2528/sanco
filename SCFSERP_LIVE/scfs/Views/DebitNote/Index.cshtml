
@model IEnumerable<scfs.Models.DebitNoteMD>

@{
    ViewBag.Title = "Debit Note";
}
<style>
    .frm_hide {
        display: none;
    }

    #sidebar {
        display: none;
    }

    #main-content {
        margin-left: auto;
    }
</style>
<div id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="panel panel-primary" style="background: #323C55;">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <i class="glyphicon glyphicon-credit-card"></i>&nbsp;Debit Note
                                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("CNForm", "DebitNote")"><i class="fa fa-plus-square "></i> Add New </a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3"> </div>
                        <div class="col-xs-6">
                            <form action="#" method="post" accept-charset="utf-8" id="remotegateinform" data-ng-controller="myController" name="remotegateinform">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-3">
                                            <label for="from">Invoice Type</label>
                                            <div class="form-group">
                                                @Html.DropDownList("SDPTID", null, new { @class = "form-control", @id = "SDPTID" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="from">From</label>
                                            <div class="form-group">
                                                <input type="text" id="from" name="from" class="form-control" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="from">To</label>
                                            <div class="form-group">
                                                <input type="text" id="to" name="to" class="form-control" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="from"></label>
                                            <div class="form-group">
                                                <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>
                    <br />
                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th style="width:auto;">No</th>
                                <th style="width:auto;">Bill No</th>
                                <th style="width:auto;">Billing CHA&nbsp;Name</th>
                                <th style="width:auto;">GST Amount</th>
                                <th style="width:auto;">Net Amount</th>
                                <th style="width:auto;">S</th>
                                <th style="width:auto;">ACK No</th>
                                <th style="width:auto;">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "DebitNote")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },

                "aoColumns": [
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": "" },
                    {
                        "sClass": "col-sm-1 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            if ((oObj.aData[7] != null || oObj.aData[7] > 0)) {
                                return ' <a class="btn btn-primary btn-xs hide" href="@Url.Action("Edit", "DebitNote")/' +
                                    oObj.aData[8] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;' +
                                    '<a class="btn btn-default btn-xs print-invoice" href="@Url.Action("PrintView", "DebitNote")/' + oObj.aData[8] + '\"  target="_blank"><i class="glyphicon glyphicon-print"></i></a>  &nbsp;&nbsp;' +
                                    '<a class="btn btn-danger del btn-xs hide" href="#" id="' + oObj.aData[8] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                            }
                            else {
                                return ' <a class="btn btn-primary btn-xs" href="@Url.Action("Edit", "DebitNote")/' +
                                    oObj.aData[8] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;' +
                                    '<a class="btn btn-default btn-xs print-invoice" href="@Url.Action("PrintView", "DebitNote")/' + oObj.aData[8] + '\"  target="_blank"><i class="glyphicon glyphicon-print"></i></a>  &nbsp;&nbsp;' +
                                    '<a class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[8] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';

                            }


                        }
                    }
                ],

            });
        });

        $("#from").datepicker({
            defaultDate: "+1w",
            changeMonth: true,
            numberOfMonths: 3,
            dateFormat: 'dd-mm-yy',
            onClose: function (selectedDate) {
                $("#to").datepicker("option", "minDate", selectedDate);
            }
        });

        $("#to").datepicker({
            defaultDate: "+1w",
            changeMonth: true,
            numberOfMonths: 3,
            dateFormat: 'dd-mm-yy',
            onClose: function (selectedDate) {
                $("#from").datepicker("option", "maxDate", selectedDate);
            }
        });

        //--------------print------------------------//
        $(".print-invoice").on("click", function () {
            var idx = $(this).attr('id');

            turl = "http://216.172.100.137:8080/cfsrpt/print.php?id" + idx;
            cpurl = "http://216.172.100.137:8080/cfsrpt/egatein.pdf";

            var pdf = $.post(turl, function () {
                alert("success");
            })
                .success(function () { })
                .complete(function () { });
            pdf.complete(function () { window.open(cpurl, "_blank"); });

            return false;
        });

        //end


        //----------------Delete Record event----------//
        $(document).on("click", "a.del", function () {
            var r = confirm("Are you sure to delete this record ?");

            if (r == true) {
                var idx = $(this).attr('id');
                base = window.location.origin;
                $.post(base + "/DebitNote/Del",
                    {
                        id: idx, fld: "DEBITNOTE"
                    },
                    function (data, status) {
                        if (data == "") {
                            //alert("You are not Authorized to Delete....!");

                            $('<div></div>').dialog({
                                modal: true,
                                title: "Information",
                                open: function () {
                                    var markup = '<b>' + 'You are not Authorized to Delete....!' + '<b>';
                                    $(this).html(markup);
                                },
                                buttons: {
                                    Ok: function () {
                                        $(this).dialog("close");
                                    }
                                }
                            }); //end confirm dialog
                        }
                        else if (data != "Deleted successfully...") {
                            //alert(data);

                            $('<div></div>').dialog({
                                modal: true,
                                title: "Information",
                                open: function () {
                                    var markup = '<b>' + data + '<b>';
                                    $(this).html(markup);
                                },
                                buttons: {
                                    Ok: function () {
                                        $(this).dialog("close");
                                    }
                                }
                            }); //end confirm dialog
                        }
                        else {
                            //alert(data);

                            $('<div></div>').dialog({
                                modal: true,
                                title: "Information",
                                open: function () {
                                    var markup = '<b>' + data + '<b>';
                                    $(this).html(markup);
                                },
                                buttons: {
                                    Ok: function () {
                                        $(this).dialog("close");
                                    }
                                }
                            }); //end confirm dialog
                            location.replace(base + "/DebitNote");
                        }
                    });
            }
            return false;
        });//End of delete

    </script>
}


