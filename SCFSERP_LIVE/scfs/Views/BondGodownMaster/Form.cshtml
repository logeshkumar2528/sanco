
@using scfs_erp.Models;
@model scfs_erp.Models.BondGodownMaster

@{
    ViewBag.Title = "Bond Godown Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Bond Godown Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/BondGodownMaster/savedata")" method="post" accept-charset="utf-8" id="BondGodownmasterform" data-ng-controller="myController" name="BondGodownmasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="BondGodownMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.GWNID, new { @class = "form-control  GWNID", @id = "GWNID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.GWNCODE)*@
                                        @Html.TextBoxFor(model => Model.GWNCODE, new { @class = "form-control GWNCODE", @id = "GWNCODE" })
                                        <input type="text" value="@Model.GWNCODE" name="i_GWNCODE " hidden />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.GWNDESC)*@
                                        @Html.TextBoxFor(model => Model.GWNDESC, new { @class = "form-control  GWNDESC", @id = "GWNDESC" })
                                        <input type="text" value="@Model.GWNDESC" name="i_GWNDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Godown Type </label>
                                        @Html.DropDownList("GWNTID", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.GWNTID)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />*@
                                <a href="@Url.Action("Index", "BondGodownMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />

                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $('#btnsave').click(function () {
        if ($('#GWNCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#GWNCODE').focus();
            return false;
        }
        if ($('#GWNDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#GWNDESC').focus();
            return false;
        }
        if ($('#GWNTID').val() == "") {
            alert('Please Select Godown Type !!');
            $('#GWNTID').focus();
            return false;
        }

        
        var pdate = new Date();

        if ($('#GWNID').val() == "") { $('#GWNID').val(0); }

        var tab = {
            GWNID: $('#GWNID').val(),
            GWNCODE: $('#GWNCODE').val(),
            GWNDESC: $('#GWNDESC').val(),
            GWNTID: $('#GWNTID').val(),            
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/BondGodownMaster/savedata",
            url: "@Url.Action("savedata", "BondGodownMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Bond Godown Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "BondGodownMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Bond Godown Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "BondGodownMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Bond Godown Master Details Already Inserted !! ');
                    $('#GRADECODE').val("");
                    $('#GRADEDESC').val("");
                    var returnurl = "@Url.Action("Form", "BondGodownMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
    </script>


}


