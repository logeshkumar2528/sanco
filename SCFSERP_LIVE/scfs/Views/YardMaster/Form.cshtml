
@using scfs_erp.Models;
@model scfs_erp.Models.YardMaster

@{
    ViewBag.Title = "YardMaster";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Yard Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/YardMaster/savedata")" method="post" accept-charset="utf-8" id="yardmasterform" data-ng-controller="myController" name="yardmasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="YardMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.YRDID, new { @class = "form-control  YRDID", @id = "YRDID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.YRDCODE)*@
                                        @Html.TextBoxFor(model => Model.YRDCODE, new { @class = "form-control YRDCODE", @id = "YRDCODE" })
                                        <input type="text" value="@Model.YRDCODE" name="i_YRDCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description <span class="required-field"></span></label>@Html.ValidationMessageFor(model => model.YRDDESC)
                                        @Html.TextBoxFor(model => Model.YRDDESC, new { @class = "form-control  YRDDESC", @id = "YRDDESC", @ToolTip = "true", @ToolTip_val_required = "tooltip" })
                                        <input type="text" value="@Model.YRDDESC" name="i_YRDDESC" hidden>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs pull-left" onclick="JavaScript:history.back()" />
                                <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />*@

                                <a href="@Url.Action("Index", "YardMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
        $(function () {
            $(document).tooltip({
                items: ".input-validation-error",
                content: function () {
                    return $(this).attr('data-val-required');
                }
            });
        });

        $('#btnsave').click(function () {

            if ($('#YRDCODE').val() == "") {
            alert('Please Enter Code !!');
                $('#YRDCODE').focus();
            return false;
        }
            if ($('#YRDDESC').val() == "") {
            alert('Please Enter Description !!');
                $('#YRDDESC').focus();
            return false;
        }
        var pdate = new Date();

            if ($('#YRDID').val() == "") { $('#YRDID').val(0); }

        var tab = {
            YRDID: $('#YRDID').val(),
            YRDCODE: $('#YRDCODE').val(),
            YRDDESC: $('#YRDDESC').val(),           
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/YardMaster/savedata",
            url: "@Url.Action("savedata", "YardMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Yard Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "YardMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Yard Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "YardMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Yard Master Details Already Inserted !! ');
                    $('#YRDCODE').val("");
                    $('#YRDDESC').val("");
                    var returnurl = "@Url.Action("Form", "YardMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });


    });
</script>
}
