@model IEnumerable<scfs_erp.Models.GateInDetail>

@{
    ViewBag.Title = "Empty Gate In";
}

<div class="col-lg-12">
    <div class="panel panel-primary" style="background: #323C55;">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="fa fa-bar-chart-o fa-fw"></i>Empty Gate In
                @*<div class="box-icons">
                        <button onclick="parent.location = '@Url.Action("Form", "EmptyGateIn")'; return false;" class="btn-success"> Create New </button>
                    </div>*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-3"> </div>
                    <div class="col-xs-6">
                        <form action="#" method="post" accept-charset="utf-8" id="remotegateinform" data-ng-controller="myController" name="remotegateinform">

                            <label for="from">From</label>
                            <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                            <label for="to">to</label>
                            <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                            <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                        </form>
                    </div>
                </div>
                <br />
                <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                    <thead>
                        <tr>

                            <th>
                                Date
                            </th>
                            <th>
                                No
                            </th>


                            <th>
                                Container&nbsp;No
                            </th>
                            <th>Size</th>

                            <th>
                                Steamer&nbsp;Name
                            </th>
                            <th>Vehicle No</th>
                            <th>S</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th colspan="11" style="text-align:center"></th>
                        </tr>

                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {
            //s alert(1);
            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "EmptyGateIn")",
                "bProcessing": true,
                "bStateSave": true,

                "aoColumns": [
                    { "sName": "", "sClass": "col-lg-2" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },

                    { "sName": "", "sClass": "col-lg-1" },
                                      @*{
                                          "sClass": "col-md-1 cent",
                                          "sName": "ID",
                                          "bSearchable": false,
                                          "bSortable": false,
                                          "fnRender": function (oObj) {
                                              // if (oObj.aData[4] == 20) TNOS++;
                                              return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "EmptyGateIn")/' +
                                              oObj.aData[10] + '\"  "><i class="glyphicon glyphicon-edit" style="font-size:small"></i></a> ';
                                          }
                                      }*@

                ],
                "fnFooterCallback": function (nRow, aaData, iStart, iEnd, aiDisplay) {
                    //alert(2);
                    var TNOS = 0; var FNOS = 0; var TUES = 0;

                    /*
                     * Calculate the total market share for all browsers in this table (ie inc. outside
                     * the pagination)
                     */

                    //alert(aiDisplay.length + "//" + nRow);
                    for (var i = 0; i < aaData.length; i++) {
                        // alert(aaData[4]);

                    }



                    /* Calculate the market share for browsers on this page */

                    for (var i = 0; i < aaData.length; i++) {
                        //alert("2" + aaData[aiDisplay[i]][3]);
                        if (aaData[aiDisplay[i]][3] == 20) TNOS++;
                        if (aaData[aiDisplay[i]][3] == 40) FNOS++;
                        TUES = eval(TNOS) + eval(2 * FNOS);
                        //  iPageMarket += aaData[aiDisplay[i]][4] * 1;
                    }

                    /* Modify the footer row to match what we want */
                    var nCells = nRow.getElementsByTagName('th'); nCells[0].innerHTML = '<span style="color:red">20":</span>' + eval(TNOS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '<span style="color:red">40":</span>' + eval(FNOS) + '&nbsp;&nbsp;&nbsp;&nbsp;<th></th>' + '<span style="color:red">TUES:</span>' + eval(TUES)
                    //  nCells[1].innerHTML = eval(TNOS); nCells[1].innerHTML = '<span style="color:red">20":</span>' + nCells[1].innerHTML + '<th></th><th></th><th></th><th></th><th></th>'
                    //  nCells[3].innerHTML = '<span style="color:red">40":</span>' + eval(FNOS);
                    // //nCells[2].innerHTML = nCells[2].innerHTML + '<th></th><th></th><th></th><th></th><th></th><th></th><th></th><th></th><th></th>'
                    //  nCells[5].innerHTML = '<span style="color:red">TUES:</span>' + eval(TUES);
                    // //nCells[3].innerHTML = '<th></th><th></th><th></th><th></th><th></th><th></th><th></th>' + nCells[3].innerHTML + '<th></th><th></th>'

                }

            });

            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });
            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });


            //--------------print------------------------//
            $(".print-invoice").on("click", function () {
                var idx = $(this).attr('id');

                turl = "http://216.172.100.137:8080/cfsrpt/print.php?id" + idx;
                cpurl = "http://216.172.100.137:8080/cfsrpt/egatein.pdf";

                var pdf = $.post(turl, function () {
                    alert("success");
                })
                    .success(function () { })
                    .complete(function () { });
                pdf.complete(function () { window.open(cpurl, "_blank"); });

                return false;
            });

            //end


          //----------------Delete Record event----------//
            $(document).on("click","a.del",function() {
                var r=confirm("Are you sure to delete this record ?");

                if (r==true)
                {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/EmptyGateIn/Del",
                         {
                             id: idx, fld: "EmptyGateIn"
                         },
                   function (data, status) {
                       if (data == "") {
                           //alert("You are not Authorized to Delete....!");

                           $('<div></div>').dialog({
                               modal: true,
                               title: "Information",
                               open: function () {
                                   var markup = '<b>' + 'You are not Authorized to Delete....!' + '<b>';
                                   $(this).html(markup);
                               },
                               buttons: {
                                   Ok: function () {
                                       $(this).dialog("close");
                                   }
                               }
                           }); //end confirm dialog
                       }
                       else if (data != "Deleted successfully...") {
                           //alert(data);

                           $('<div></div>').dialog({
                               modal: true,
                               title: "Information",
                               open: function () {
                                   var markup = '<b>' + data + '<b>';
                                   $(this).html(markup);
                               },
                               buttons: {
                                   Ok: function () {
                                       $(this).dialog("close");
                                   }
                               }
                           }); //end confirm dialog
                       }
                       else {
                           //alert(data);

                           $('<div></div>').dialog({
                               modal: true,
                               title: "Information",
                               open: function () {
                                   var markup = '<b>' + data + '<b>';
                                   $(this).html(markup);
                               },
                               buttons: {
                                   Ok: function () {
                                       $(this).dialog("close");
                                   }
                               }
                           }); //end confirm dialog
                           location.replace(base + "/EmptyGateIn");
                       }
                   });
                }
                return false;
            });//End of delete
        });

    </script>
}
