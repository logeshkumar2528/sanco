

@{
    ViewBag.Title = "Load Slip";
}

<div class="col-lg-12">
    <div class="panel panel-primary" style="background: #323C55;">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="fa fa-bar-chart-o fa-fw"></i>Non-PNR Load Slip
                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "NonPNRLoadAuthorizationSlip")"><i class="fa fa-plus-square "></i> Add New </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-3"> </div>
                    <div class="col-xs-6">
                        <form action="#" method="post" accept-charset="utf-8" id="exportgateinform" data-ng-controller="myController" name="exportgateinform">
                            <label for="from">From</label>
                            <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                            <label for="to">to</label>
                            <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                            <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                        </form>
                    </div>
                </div>
                <br />
                <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                No
                            </th>
                            <th>Container No</th>
                            <th>Size</th>
                            <th>
                                CHA Name
                            </th>
                            <th>
                                BOE No
                            </th>
                            <th>
                                IGM No
                            </th>
                            <th>
                                GPL No
                            </th>
                            <th>S</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>

        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "NonPNRLoadAuthorizationSlip")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "asc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "", "sClass": "col-md-2 " },
                    { "sName": " ", "sClass": "col-md-1 " }, { "sName": " ", "sClass": "col-md-3 " },
                    { "sName": "", "sClass": "col-md-1 " },
                    { "sName": "", "sClass": "col-md-4 " },
                    { "sName": " ", "sClass": "col-md-2 " },
                    { "sName": "", "sClass": "col-md-2 " },
                    { "sName": "", "sClass": "col-md-2 " },
                    { "sName": "", "sClass": "col-md-1 " },
                    {
                        "sClass": "col-md-1 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            if (oObj.aData[9] == "C") {
                                return ' <a  class="btn btn-primary btn-xs"  href="@Url.Action("Edit", "NonPNRLoadAuthorizationSlip")/' +
                                    oObj.aData[9] + '\"  "><i class="glyphicon glyphicon-edit" style="font-size:small"></i></a>  &nbsp;&nbsp;<a  class="btn btn-info hide1 ucancel btn-xs" href="#" id="' +
                                    oObj.aData[9] + '\" title="Undo Cancel">U </a> &nbsp;&nbsp; <a  class="btn btn-danger  del btn-xs" href="#" id="' +
                                    oObj.aData[9] + '\" ><i class="glyphicon glyphicon-trash" style="font-size:small "></i> </a> ';
                            }
                            else {
                                return ' <a  class="btn btn-primary btn-xs"  href="@Url.Action("Edit", "NonPNRLoadAuthorizationSlip")/' +
                                    oObj.aData[9] + '\"  "><i class="glyphicon glyphicon-edit" style="font-size:small"></i></a>  &nbsp;&nbsp; <a  class="btn btn-info  cancel btn-xs" href="#" id="' +
                                    oObj.aData[9] + '\" title="Cancel">C </a> &nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("PrintView", "NonPNRLoadAuthorizationSlip")/' +
                                    oObj.aData[9] + '\"  " title="Print" target="_blank"><i class="glyphicon glyphicon-print"></i></a> &nbsp;&nbsp;<a  class="btn btn-danger  del btn-xs" href="#" id="' +
                                    oObj.aData[9] + '\" ><i class="glyphicon glyphicon-trash" style="font-size:small "></i> </a> ';
                            }
                        }
                    }

                ]
            });

            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });

            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });

            $(document).on("click", "a.cancel", function () {
                var r = confirm("Are you sure to Cancel this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/NonPNRLoadAuthorizationSlip/Cancel",
                        {
                            id: idx, fld: "NonPNRLoadAuthorizationSlip"
                        },
                        function (data, status) {
                            //alert(data);

                            $('<div></div>').dialog({
                                modal: true,
                                title: "Information",
                                open: function () {
                                    var markup = '<b>' + data + '<b>';
                                    $(this).html(markup);
                                },
                                buttons: {
                                    Ok: function () {
                                        $(this).dialog("close");
                                    }
                                }
                            }); //end confirm dialog
                            if (data == "Cancelled successfully...")
                                location.replace(base + "/NonPNRLoadAuthorizationSlip");
                        });
                }
                return false;
            });//----End of delete

            $(document).on("click", "a.ucancel", function () {
                var r = confirm("Are you sure to undo the Cancellation ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/NonPNRLoadAuthorizationSlip/UCancel",
                        {
                            id: idx, fld: "NonPNRLoadAuthorizationSlip"
                        },
                        function (data, status) {
                            //alert(data);

                            $('<div></div>').dialog({
                                modal: true,
                                title: "Information",
                                open: function () {
                                    var markup = '<b>' + data + '<b>';
                                    $(this).html(markup);
                                },
                                buttons: {
                                    Ok: function () {
                                        $(this).dialog("close");
                                    }
                                }
                            }); //end confirm dialog
                            if (data == "Undo success...!")
                                location.replace(base + "/NonPNRLoadAuthorizationSlip");
                        });
                }
                return false;
            });//----End of delete
            //----------------Delete button click event----
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/NonPNRLoadAuthorizationSlip/Del",
                        {
                            id: idx, fld: "NonPNRLoadAuthorizationSlip"
                        },
                        function (data, status) {
                            //alert(data);

                            $('<div></div>').dialog({
                                modal: true,
                                title: "Information",
                                open: function () {
                                    var markup = '<b>' + data + '<b>';
                                    $(this).html(markup);
                                },
                                buttons: {
                                    Ok: function () {
                                        $(this).dialog("close");
                                    }
                                }
                            }); //end confirm dialog
                            if (data == "Deleted successfully...")
                                location.replace(base + "/NonPNRLoadAuthorizationSlip");
                        });
                }
                return false;
            });//----End of delete
        });//---End of ready function
    </script>
}
