@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "BankMaster")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "" },
                    { "sName": " ", "sClass": "action" },
                    { "sName": "" },


                    {
                        "sClass": "col-sm-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit","BankMaster")/' +
                                oObj.aData[3] + '\" Title=Modify Details><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger btn-xs del" href="#" id="' + oObj.aData[3] + '"><i class="glyphicon glyphicon-trash"></i> </a> ';
                        }
                    }

                ]
            });
            //---------------Delete Record------------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/BankMaster/Del",
                        {
                            id: idx, fld: ""
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/BankMaster");
                        });
                }
                return false;
            });//End
        });
    </script>
}


