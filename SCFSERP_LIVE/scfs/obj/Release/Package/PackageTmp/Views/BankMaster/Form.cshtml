@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#btnsave').click(function () {
            if ($('#BANKMCODE').val() == "") {
                alert('Please Enter Code !!');
                $('#BANKMCODE').focus();
                return false;
            }
            if ($('#BANKMDESC').val() == "") {
                alert('Please Enter Description !!');
                $('#BANKMDESC').focus();
                return false;
            }

            var pdate = new Date();

            if ($('#BANKMID').val() == "") { $('#BANKMID').val(0); }

            var tab = {
                BANKMID: $('#BANKMID').val(),
                BANKMCODE: $('#BANKMCODE').val(),
                BANKMDESC: $('#BANKMDESC').val(),
                DISPSTATUS: $('#DISPSTATUS').val(),
                CUSRID: "",
                LMUSRID: 1,
                PRCSDATE: pdate
            };
            $.ajax({
                url: "/BankMaster/savedata",
                data: JSON.stringify(tab),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (status) {
                    if (status == "Update") {
                        alert('Bank Master Details Updated Successfully !! ');

                        var returnurl = "@Url.Action("Index", "BankMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Success") {
                        alert('Bank Master Details Inserted Successfully !! ');
                        var returnurl = "@Url.Action("Index", "BankMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Existing") {
                        alert('Bank Master Details Already Inserted !! ');
                        $('#BANKMCODE').val("");
                        $('#BANKMDESC').val("");
                        var returnurl = "@Url.Action("Form", "BankMaster")";
                        window.location.href = returnurl;
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });

        });
    </script>

}

