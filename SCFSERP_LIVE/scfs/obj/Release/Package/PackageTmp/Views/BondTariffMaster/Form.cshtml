@using scfs_erp.Models;
@model scfs_erp.Models.BondTariffMaster
@{
    ViewBag.Title = "Bond Tariff Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Bond Tariff Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/BondTariffMaster/savedata")" method="post" accept-charset="utf-8" id="tariffmasterform" data-ng-controller="myController" name="tariffmasterform">

                    @Html.ValidationSummary(true)
                    <fieldset id="BondTariffMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.TARIFFMID, new { @class = "form-control  TARIFFMID", @id = "TARIFFMID" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.TARIFFMCODE, new { @class = "form-control TARIFFMCODE", @id = "TARIFFMCODE" })
                                        <input type="text" value="@Model.TARIFFMCODE" name="i_TARIFFMCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.TARIFFMDESC, new { @class = "form-control  TARIFFMDESC", @id = "TARIFFMDESC" })
                                        <input type="text" value="@Model.TARIFFMDESC" name="i_TARIFFMDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <a href="@Url.Action("Index", "BondTariffMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $('#btnsave').click(function () {
        if ($('#TARIFFMCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#TARIFFMCODE').focus();
            return false;
        }
        if ($('#TARIFFMDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#TARIFFMDESC').focus();
            return false;
        }
        if ($('#SDPTID').val() == "") {
            alert('Please Select  Department !!');
            $('#SDPTID').focus();
            return false;
        }

        var pdate = new Date();
        if ($('#TARIFFMID').val() == "") { $('#TARIFFMID').val(0); }
        
        var tab = {
            TARIFFMID: $('#TARIFFMID').val(),
            TARIFFMCODE: $('#TARIFFMCODE').val(),
            TARIFFMDESC: $('#TARIFFMDESC').val(),
            SDPTID: 10,
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: "",
            PRCSDATE: pdate
        };
        $.ajax({
            url: "/BondTariffMaster/savedata",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Tariff Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "BondTariffMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Tariff Master Details Added Successfully !! ');
                    var returnurl = "@Url.Action("Index", "BondTariffMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Tariff Master Details Already Added !! ');
                    $('#TARIFFMCODE').val("");
                    $('#TARIFFMDESC').val("");
                    var returnurl = "@Url.Action("Form", "BondTariffMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });


    });
    </script>



}
