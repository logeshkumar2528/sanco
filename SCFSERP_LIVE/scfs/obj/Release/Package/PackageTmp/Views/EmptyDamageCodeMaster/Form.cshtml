@using scfs_erp.Models;
@model scfs_erp.Models.EmptyDamageCodeMaster

@{
    ViewBag.Title = "Empty Damage Code";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Empty Damage Code</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/EmptyDamageCodeMaster/savedata")" method="post" accept-charset="utf-8" id="emptydamagecodemasterform" data-ng-controller="myController" name="emptydamagecodemasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="EmptyDamageCodeMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.DMGID, new { @class = "form-control  DMGID", @id = "DMGID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.DMGCODE)*@
                                        @Html.TextBoxFor(model => Model.DMGCODE, new { @class = "form-control DMGCODE", @id = "DMGCODE" })
                                        <input type="text" value="@Model.DMGCODE" name="i_DMGCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.DMGDESC)*@
                                        @Html.TextBoxFor(model => Model.DMGDESC, new { @class = "form-control  DMGDESC", @id = "DMGDESC" })
                                        <input type="text" value="@Model.DMGDESC" name="i_DMGDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <a href="@Url.Action("Index", "EmptyDamageCodeMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    $('#btnsave').click(function () {
        if ($('#DMGCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#DMGCODE').focus();
            return false;
        }
        if ($('#DMGDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#DMGDESC').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#DMGID').val() == "") { $('#DMGID').val(0); }

        var tab = {
            DMGID: $('#DMGID').val(),
            DMGCODE: $('#DMGCODE').val(),
            DMGDESC: $('#DMGDESC').val(),

            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/EmptyDamageCodeMaster/savedata",
            url:"@Url.Action("savedata", "EmptyDamageCodeMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Damage Code Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "EmptyDamageCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Damage Code Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "EmptyDamageCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Damage Code Master Details Already Inserted !! ');
                    $('#DMGCODE').val("");
                    $('#DMGDESC').val("");
                    var returnurl = "@Url.Action("Form", "EmptyDamageCodeMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
    </script>
}



