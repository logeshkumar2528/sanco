
@using scfs_erp.Models;
@model scfs_erp.Models.EmptyComponentCodeMaster

@{
    ViewBag.Title = "Empty Component Code";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Empty Component Code</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/EmptyComponentCodeMaster/savedata")" method="post" accept-charset="utf-8" id="emptycomponentcodemasterform" data-ng-controller="myController" name="emptycomponentcodemasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="EmptyComponentCodeMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.COMPTID, new { @class = "form-control  COMPTID", @id = "COMPTID" })
                                        @*</div>*@
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.COMPTCODE)*@
                                            @Html.TextBoxFor(model => Model.COMPTCODE, new { @class = "form-control COMPTCODE", @id = "COMPTCODE" })
                                            <input type="text" value="@Model.COMPTCODE" name="i_COMPTCODE" hidden>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.COMPTDESC)*@
                                            @Html.TextBoxFor(model => Model.COMPTDESC, new { @class = "form-control  COMPTDESC", @id = "COMPTDESC" })
                                            <input type="text" value="@Model.COMPTDESC" name="i_COMPTDESC" hidden>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Status </label>
                                            @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <a href="@Url.Action("Index", "EmptyComponentCodeMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

<script>
    $('#btnsave').click(function () {
        if ($('#COMPTCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#COMPTCODE').focus();
            return false;
        }
        if ($('#COMPTDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#COMPTDESC').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#COMPTID').val() == "") { $('#COMPTID').val(0); }

        var tab = {
            COMPTID: $('#COMPTID').val(),
            COMPTCODE: $('#COMPTCODE').val(),
            COMPTDESC: $('#COMPTDESC').val(),

            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/EmptyComponentCodeMaster/savedata",
            url:"@Url.Action("savedata", "EmptyComponentCodeMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Component Code Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "EmptyComponentCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Component Code Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "EmptyComponentCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Component Code Master Details Already Inserted !! ');
                    $('#COMPTCODE').val("");
                    $('#COMPTDESC').val("");
                    var returnurl = "@Url.Action("Form", "EmptyComponentCodeMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
</script>

}






