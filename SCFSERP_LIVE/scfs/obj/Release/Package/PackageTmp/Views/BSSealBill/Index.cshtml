@model IEnumerable<scfs_erp.Models.TransactionMaster>

@{
    ViewBag.Title = "Seal Invoice(Bill of Supply)";
}

<div class="col-md-12">
    <div class="panel panel-primary" style="background: #323C55;">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="glyphicon glyphicon-export"></i>@ViewBag.Title
                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("GSTForm", "BSSealBill")"><i class="fa fa-plus-square "></i> Add New </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <br />
        <div class="row">
            <div class="col-xs-3"> </div>
            <div class="col-xs-12">
                <form action="#" method="post" accept-charset="utf-8" id="BSSealBillform" data-ng-controller="myController" name="BSSealBillform">
                    <table style="margin-left:65px"><tr><td><span style="margin-left:5px">Bill Type</span></td><td>@Html.DropDownList("TRANBTYPE", null, new { @class = "form-control", style = "margin-left:5px" })</td><td><span style="margin-left:5px">Billed to</span></td><td>@Html.DropDownList("REGSTRID", null, new { @class = "form-control", style = "margin-left:5px" })</td><td><span style="margin-left:5px">From</span></td><td><input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]" style="margin-left:5px"></td><td><span style="margin-left:5px">To</span></td><td><input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]" style="margin-left:5px"></td><td><input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" style="margin-left:15px" /></td></tr></table>

                </form>
            </div>
        </div>
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>Time</th>
                    <th>
                        No
                    </th>

                    <th>
                        CHA Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>NOC</th>
                    <th>
                        S
                    </th>
                    <th class="hidden">
                        gst
                    </th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</div>
@section Scripts {
    <script>
            $(document).ready(function () {
                $(document).on('hidden.bs.modal', function (e) {
                    var target = $(e.target);
                    target.removeData('bs.modal')
                          .find(".modal-content").html('');
                });
                $('#dataTables-example').dataTable({
                    "bServerSide": true,
                    "sAjaxSource": "@Url.Action("GetAjaxData", "BSSealBill")",
                    "bProcessing": true,
                    "bStateSave": true,
                    "aaSorting": [[1, "desc"]],
                    "oLanguage": {
                        "sSearch": "Search: "
                    },
                    "aoColumns": [
                        { "sName": "", "sClass": "col-lg-2" },
                        { "sName": "" },
                        { "sName": "" },
                        { "sName": " ", "sClass": "col-lg-3" },
                        {
                            "sName": "", "sClass": "col-lg-1",

                        },
                        { "sName": "" },
                        { "sName": "" },
                        { "sName": "", "sClass": "col-lg-2 hide" },
                        {
                            "sClass": "col-sm-1 cent",
                            "sName": "ID",
                            "bSearchable": false,
                            "bSortable": false,
                            "fnRender": function (oObj) {
                                if (oObj.aData[7] > 0) {
                                    return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "BSSealBill")/' +
                                        oObj.aData[8] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("AForm", "BSSealBill")/?id=' +
                                        oObj.aData[8] + '~' + oObj.aData[7] + '\" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-print"></i></a>&nbsp;&nbsp;<a   class="btn btn-warning btn-xs"   href="@Url.Action("MForm", "MailForm")/' +
                                        oObj.aData[8] + '\" target="_blank"><i class="glyphicon glyphicon-envelope"></i></a>   &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[8] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                                }
                                else {
                                    return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "BSSealBill")/' +
                                        oObj.aData[8] + '\"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("AForm", "BSSealBill")/?id=' +
                                        oObj.aData[8] + '\" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-print"></i></a>&nbsp;&nbsp;<a   class="btn btn-warning btn-xs"   href="@Url.Action("MForm", "MailForm")/' +
                                        oObj.aData[8] + '\" target="_blank"><i class="glyphicon glyphicon-envelope"></i></a>   &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[8] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                                }
                            }
                        }

                    ]
                });


                $("#from").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 3,
                    dateFormat: 'dd-mm-yy',
                    onClose: function (selectedDate) {
                        $("#to").datepicker("option", "minDate", selectedDate);
                    }
                });
                $("#to").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 3,
                    dateFormat: 'dd-mm-yy',
                    onClose: function (selectedDate) {
                        $("#from").datepicker("option", "maxDate", selectedDate);
                    }
                });
                //------------Delete Record-------------//
                $(document).on("click", "a.del", function () {
                    var r = confirm("Are you sure to delete this record ?");

                    if (r == true) {
                        var idx = $(this).attr('id');
                        base = window.location.origin;
                        $.post(base + "/BSSealBill/Del",
                               {
                                   id: idx, fld: ""
                               },
                             function (data, status) {
                                 if (data == "") {
                                     alert("You are not Authorized to Delete....!");
                                 }
                                 else if (data != "Deleted successfully...") {
                                     alert(data);
                                 }
                                 else {
                                     alert(data);
                                     location.replace(base + "/BSSealBill");}
                             });
                    }
                    return false;
                });//End
            });
    </script>
}

<div id="myModal" class="modal fade">


</div>