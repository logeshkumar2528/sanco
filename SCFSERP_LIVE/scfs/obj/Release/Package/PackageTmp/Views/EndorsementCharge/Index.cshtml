@model IEnumerable<scfs_erp.Models.EndorsementChargeMaster>
@{
    ViewBag.Title = "Endorsement Charge";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="glyphicon glyphicon-share"></i><strong>@ViewBag.Title</strong>
                </div>
                <div class="box-icons">
                    <button onclick="parent.location = '@Url.Action("Form", "EndorsementCharge")'; return false;" class=" btn-success"> Create New </button>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <br />
                <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                Code
                            </th>
                            <th>
                                Description
                            </th>
                            <th>Status</th>
                            <th class=""></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "EndorsementCharge")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "" },
                    { "sName": " ", "sClass": "action" },
                    {
                        "sName": "", "sClass": "action",
                    },
                    {
                        "sClass": "col-sm-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "EndorsementCharge")/' +
                                oObj.aData[3] + '\" Title=Modify Details"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger btn-xs del" href="#" id="' + oObj.aData[3] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';

                        }
                    }

                ]
            });

            //-----------Delete Row function--------------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;

                    $.post(base + "/EndorsementCharge/Del",
                        {
                            id: idx, fld: "ENDORSEMENT_CHARGE_MASTER"
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/EndorsementCharge");

                        });//---End of post
                }
                return false;
            });//End of delete
        });
    </script>
}
