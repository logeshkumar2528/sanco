
@using scfs_erp.Models;
@model scfs_erp.Models.EndorsementChargeMaster

@{
    ViewBag.Title = "Form";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Endorsement Charge</strong>

                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/EndorsementCharge/savedata")" method="post" accept-charset="utf-8" id="accountgroupmasterform" data-ng-controller="myController" name="accountgroupmasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="AccountGroupMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.ECMID, new { @class = "form-control  ECMID", @id = "ECMID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Charge Type<span class="required-field"></span> </label>
                                        @Html.DropDownList("ECTID", null, "Select", new { @class = "form-control ECTID", @id = "ECTID", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.ECMCODE, new { @class = "form-control ECMCODE", @id = "ECMCODE", @required = true })
                                        <input type="text" value="@Model.ECMCODE" name="i_ECTCODE" hidden>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.ECMDESC, new { @class = "form-control ECMDESC", @id = "ECMDESC", @required = true })
                                        <input type="text" value="@Model.ECMDESC" name="i_ECMDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Cost Factor<span class="required-field"></span> </label>
                                        @Html.DropDownList("CFID", null, "Select", new { @class = "form-control CFID", @id = "CFID", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Calculated On<span class="required-field"></span> </label>
                                        @Html.DropDownList("CHRGDON", null, new { @class = "form-control CHRGDON", @id = "CHRGDON", @required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control DISPSTATUS", @id = "DISPSTATUS" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs pull-left" onclick="JavaScript:history.back()" />*@
                                <input type="button" name="submit2" value="Save as Estimate" class="btn btn-warning btn-xs hidden " hidden />
                                @*<input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />*@
                                <a href="@Url.Action("Index", "EndorsementChargeType")" class="btn btn-primary btn-xs pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#btnsave').click(function () {
            if ($('#ECTID').val() == "") {
                alert('Please Select Charge Type !!');
                $('#ECTID').focus();
                return false;
            }
            if ($('#ECMCODE').val() == "") {
                alert('Please Enter Code !!');
                $('#ECMCODE').focus();
                return false;
            }
            if ($('#ECMDESC').val() == "") {
                alert('Please Enter Description !!');
                $('#ECMDESC').focus();
                return false;
            }
            if ($('#CFID').val() == "") {
                alert('Please Select Cost Factor !!');
                $('#CFID').focus();
                return false;
            }
            if ($('#CHRGDON').val() == "") {
                alert('Please Select Calculated On !!');
                $('#CHRGDON').focus();
                return false;
            }

            var pdate = new Date();

            if ($('#ECMID').val() == "") { $('#ECMID').val(0); }

            if ($('#CHRGDON').val() == "") { $('#CHRGDON').val(0); }

            var tab = {
                ECMID: $('#ECMID').val(),
                ECTID: $('#ECTID').val(),
                ECMCODE: $('#ECMCODE').val(),
                ECMDESC: $('#ECMDESC').val(),
                CFID: $('#CFID').val(),
                CHRGDON: $('#CHRGDON').val(),
                DISPSTATUS: $('#DISPSTATUS').val(),
                CUSRID: "",
                LMUSRID: 1,
                PRCSDATE: pdate
            };
            $.ajax({
                //url: "/EndorsementCharge/savedata",
                url: "@Url.Action("savedata", "EndorsementCharge")",
                data: JSON.stringify(tab),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (status) {
                    if (status == "Update") {
                        alert('Export Charge Master Details Updated Successfully !! ');

                        var returnurl = "@Url.Action("Index", "EndorsementCharge")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Success") {
                        alert('Export Charge Master Details Inserted Successfully !! ');
                        var returnurl = "@Url.Action("Index", "EndorsementCharge")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Existing") {
                        alert('Export Charge Master Details Already Inserted !! ');
                        $('#ECTCODE').val("");
                        $('#ECTDESC').val("");
                        var returnurl = "@Url.Action("Form", "EndorsementCharge")";
                        window.location.href = returnurl;
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });

        });
    </script>

}
