
@using scfs_erp.Models;
@model scfs_erp.Models.LocationMaster


@{
    ViewBag.Title = "Location Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Location Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                @*<form action="@Url.Content("~/LocationMaster/savedata")" method="post" accept-charset="utf-8" id="locationmasterform" data-ng-controller="myController" name="locationmasterform">*@
                <form>
                    @Html.ValidationSummary(true)
                    <fieldset id="LocationMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.LOCTID, new { @class = "form-control  LOCTID", @id = "LOCTID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span></label>@Html.ValidationMessageFor(model => model.LOCTCODE)
                                        @Html.TextBoxFor(model => Model.LOCTCODE, new { @class = "form-control LOCTCODE", @id = "LOCTCODE" })
                                        <input type="text" value="@Model.LOCTCODE" name="i_LOCTCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@Html.ValidationMessageFor(model => model.LOCTDESC)
                                        @Html.TextBoxFor(model => Model.LOCTDESC, new { @class = "form-control  LOCTDESC", @id = "LOCTDESC" })
                                        <input type="text" value="@Model.LOCTDESC" name="i_LOCTDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@

                                <a href="@Url.Action("Index", "LocationMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />

                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#btnsave').click(function () {
            if ($('#LOCTCODE').val() == "") {
                alert('Please Enter Code !!');
                $('#LOCTCODE').focus();
                return false;
            }
            if ($('#LOCTDESC').val() == "") {
                alert('Please Enter Description !!');
                $('#LOCTDESC').focus();
                return false;
            }

            var pdate = new Date();

            if ($('#LOCTID').val() == "") { $('#LOCTID').val(0); }

            var tab = {
                LOCTID: $('#LOCTID').val(),
                LOCTCODE: $('#LOCTCODE').val(),
                LOCTDESC: $('#LOCTDESC').val(),
                DISPSTATUS: $('#DISPSTATUS').val(),
                CUSRID: "",
                LMUSRID: 1,
                PRCSDATE: pdate
            };
            $.ajax({
                url: "/LocationMaster/savedata",
                data: JSON.stringify(tab),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (status) {
                    if (status == "Update") {
                        alert('Location Master Details Updated Successfully !! ');

                        var returnurl = "@Url.Action("Index", "LocationMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Success") {
                        alert('Location Master Details Inserted Successfully !! ');
                        var returnurl = "@Url.Action("Index", "LocationMaster")";
                        window.location.href = returnurl;
                    }
                    else if (status == "Existing") {
                        alert('Location Master Details Already Inserted !! ');
                        $('#LOCTCODE').val("");
                        $('#LOCTDESC').val("");
                        var returnurl = "@Url.Action("Form", "LocationMaster")";
                        window.location.href = returnurl;
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });

        });
    </script>
}
