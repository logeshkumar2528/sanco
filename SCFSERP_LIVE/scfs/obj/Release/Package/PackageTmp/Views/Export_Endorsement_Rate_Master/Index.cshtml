@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "Export_Endorsement_Rate_Master")",
                "bProcessing": true,
                "bStateSave": true,
                "aaSorting": [[1, "desc"]],
                "oLanguage": {
                    "sSearch": "Search: "
                },
                "aoColumns": [
                    { "sName": "", "sClass": "col-md-3", },
                    { "sName": " ", "sClass": "col-md-3", },
                    { "sName": "" },
                    { "sName": "" },
                    { "sName": " " },
                    { "sName": "" },
                    { "sName": "" },
                    {
                        "sClass": "col-md-1 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class="btn btn-primary  btn-xs"   href="@Url.Action("Edit", "Export_Endorsement_Rate_Master")/' +
                                oObj.aData[7] + '\"  Title=Modify Details"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' +
                                oObj.aData[7] + '\" ><i class="glyphicon glyphicon-trash"></i> </a> ';
                        }
                    }

                ]
            });
            //----------------Delete Record-----------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/Export_Endorsement_Rate_Master/Del",
                        {
                            id: idx, fld: ""
                        },
                        function (data, status) {
                            alert(data);
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/Export_Endorsement_Rate_Master");
                        });
                }
                return false;
            });//End

        });
        function GetCharge() {

            $(".ECMID").empty();
            $.ajax({

                type: 'get',
                url: '@Url.Action("GetCharge", "Export_Endorsement_Rate_Master")?id=' + $(".ECTID option:selected").val(), // we are calling json method

                success: function (data) {
                    // alert(data);
                    //  $(".ECMID").append('<option>Select</option>');
                    $.each(data, function (i, dataval) {
                        $(".ECMID").append('<option value="' + dataval.ECMID + '">' + dataval.ECMDESC + '</option>');

                    });

                },
                error: function (ex) {
                    alert('Failed to data ' + ex);
                }
            });
            return false;
        }
    </script>
}