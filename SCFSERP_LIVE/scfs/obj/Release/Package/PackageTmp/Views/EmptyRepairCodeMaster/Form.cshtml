@using scfs_erp.Models;
@model scfs_erp.Models.EmptyRepairCodeMaster

@{
    ViewBag.Title = "Empty Repair Code";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Empty Repair Code</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                <form action="@Url.Content("~/EmptyRepairCodeMaster/savedata")" method="post" accept-charset="utf-8" id="emptyrepaircodemasterform" data-ng-controller="myController" name="emptyrepaircodemasterform">
                    @Html.ValidationSummary(true)
                    <fieldset id="EmptyRepairCodeMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.RPRID, new { @class = "form-control  RPRID", @id = "RPRID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.RPRCODE)*@
                                        @Html.TextBoxFor(model => Model.RPRCODE, new { @class = "form-control RPRCODE", @id = "RPRCODE" })
                                        <input type="text" value="@Model.RPRCODE" name="i_RPRCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.RPRDESC)*@
                                        @Html.TextBoxFor(model => Model.RPRDESC, new { @class = "form-control  RPRDESC", @id = "RPRDESC" })
                                        <input type="text" value="@Model.RPRDESC" name="i_RPRDESC" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />
                                    <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <a href="@Url.Action("Index", "EmptyRepairCodeMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    $('#btnsave').click(function () {
        if ($('#RPRCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#RPRCODE').focus();
            return false;
        }
        if ($('#RPRDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#RPRDESC').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#RPRID').val() == "") { $('#RPRID').val(0); }

        var tab = {
            RPRID: $('#RPRID').val(),
            RPRCODE: $('#RPRCODE').val(),
            RPRDESC: $('#RPRDESC').val(),

            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/EmptyRepairCodeMaster/savedata",
            url:"@Url.Action("savedata", "EmptyRepairCodeMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Repair Code Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "EmptyRepairCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Repair Code Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "EmptyRepairCodeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Repair Code Master Details Already Inserted !! ');
                    $('#RPRCODE').val("");
                    $('#RPRDESC').val("");
                    var returnurl = "@Url.Action("Form", "EmptyRepairCodeMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                //alert(errormessage.responseText);
            }
        });

    });
    </script>
}