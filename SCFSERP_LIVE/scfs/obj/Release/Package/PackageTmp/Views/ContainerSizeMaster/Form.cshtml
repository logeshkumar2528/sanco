

@using scfs_erp.Models;
@model scfs_erp.Models.ContainerSizeMaster

@{
    ViewBag.Title = "Container Size Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <strong>Container Size Master</strong>
                </div>
            </div>
            <div class="box-content" data-ng-app="myModule">
                @*<form action="@Url.Content("~/ContainerSizeMaster/savedata")" method="post" accept-charset="utf-8" id="containersizemasterform" data-ng-controller="myController" name="containersizemasterform">*@
                <form>
                    <fieldset id="ContainerSizeMasterForm_info">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4 hidden">
                                    <div class="form-group">
                                        <label>Primary  </label>
                                        @Html.TextBoxFor(model => Model.CONTNRSID, new { @class = "form-control  CONTNRSID", @id = "CONTNRSID" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Code<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.CONTNRSCODE, new { @class = "form-control CONTNRSCODE", @id = "CONTNRSCODE" })
                                        <input type="text" value="@Model.CONTNRSCODE" name="i_CONTNRSCODE" hidden>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Description<span class="required-field"></span> </label>
                                        @Html.TextBoxFor(model => Model.CONTNRSDESC, new { @class = "form-control  CONTNRSDESC", @id = "CONTNRSDESC" })
                                        <input type="text" value="@Model.CONTNRSDESC" name="i_CONTNRSDESC" hidden>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Status </label>
                                        @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 box-footer">
                                <a href="@Url.Action("Index", "ContainerSizeMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs  pull-left" onclick="JavaScript:history.back()" />*@
                                @*<input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs  " id="save" />*@
                                <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $('#btnsave').click(function () {
        if ($('#CONTNRSCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#CONTNRSCODE').focus();
            return false;
        }
        if ($('#CONTNRSDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#CONTNRSDESC').focus();
            return false;
        }

        var CONTNRSID = $('#CONTNRSID').val();
        var CONTNRSCODE = $('#CONTNRSCODE').val();
        var CONTNRSDESC = $('#CONTNRSDESC').val();
        var DISPSTATUS = $('#DISPSTATUS').val();
        var CUSRID = "";
        var LMUSRID = "";
        var pdate = new Date();
        var PRCSDATE = pdate;

        if ($('#CONTNRSID').val() == "") { $('#CONTNRSID').val(0);}

        var tab = {
            CONTNRSID: $('#CONTNRSID').val(),
            CONTNRSCODE: $('#CONTNRSCODE').val(),
            CONTNRSDESC: $('#CONTNRSDESC').val(),
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: PRCSDATE
        };
        $.ajax({
            //url: "/ContainerSizeMaster/savedata",
            url: "@Url.Action("savedata", "ContainerSizeMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Container Size Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "ContainerSizeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Container Size Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "ContainerSizeMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Container Size Details Already Inserted !! ');
                    $('#CONTNRSCODE').val("");
                    $('#CONTNRSDESC').val("");
                    var returnurl = "@Url.Action("Form", "ContainerSizeMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });


    });

</script>



}

