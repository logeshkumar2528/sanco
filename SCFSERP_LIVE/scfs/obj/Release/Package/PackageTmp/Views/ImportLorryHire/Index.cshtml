@{
    ViewBag.Title = "Lorry Hire Bill Detail";
}

<div class="col-md-12">
    <div class="panel panel-primary" style="background: #323C55;">
        <div class="panel-heading">
            <div class="panel-title">
                <i class="glyphicon glyphicon-import"></i>@ViewBag.Title
                <a class="btn btn-success btn-sm pull-right" style="padding:3px;margin:0 0 10px" href="@Url.Action("Form", "ImportLorryHire")"><i class="fa fa-plus-square "></i> Add New </a>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <br />

        <div class="row">
            <div class="col-xs-3"> </div>
            <div class="col-xs-6">
                <form action="#" method="post" accept-charset="utf-8" id="form" data-ng-controller="myController" name="form">
                    <label for="from">From</label>
                    <input type="text" id="from" name="from" value="@System.Web.HttpContext.Current.Session["SDATE"]">
                    <label for="to">to</label>
                    <input type="text" id="to" name="to" value="@System.Web.HttpContext.Current.Session["EDATE"]">
                    <input type="submit" name="submit" value="Search" class="btn btn-primary btn-xs" />
                </form>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
            <thead>
                <tr>

                    <th>
                        Date
                    </th>

                    <th>
                        Number
                    </th>
                    <th>
                        Container No
                    </th>
                    <th>
                        Size
                    </th>
                    <th>
                        IGM No
                    </th>
                    <th>
                        Vessel
                    </th>

                    <th>
                        Streamer
                    </th>
                    <th>Bill No</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "ImportLorryHire")",
                "bProcessing": true,
                "bStateSave": true,

                "aoColumns": [
                        { "sName": "", "sClass": "col-lg-2" },
                         { "sName": "" },
                          { "sName": "", "sClass": "col-lg-2" }, { "sName": "", "sClass": "col-lg-1" },
                        { "sName": " ", "sClass": "col-lg-2" },
                    {
                        "sName": "", "sClass": "col-lg-3",

                    },
                      { "sName": "", "sClass": "col-lg-4" },
                       { "sName": "", "sClass": "col-lg-4" },
                                      {
                                          "sClass": "col-sm-1 cent",
                                          "sName": "ID",
                                          "bSearchable": false,
                                          "bSortable": false,
                                          "fnRender": function (oObj) {
                                              return ' <a   class="btn btn-primary btn-xs"   href="@Url.Action("Edit", "ImportLorryHire")/' +
                                                  oObj.aData[9] + '\"  target="_blank"><i class="glyphicon glyphicon-edit"></i></a>  &nbsp;&nbsp;<a   class="btn btn-default btn-xs"   href="@Url.Action("PrintView", "ImportLorryHire")/' +
                                                  oObj.aData[9] + '\"  target="_blank"><i class="glyphicon glyphicon-print"></i></a>  &nbsp;&nbsp;<a  class="btn btn-danger del btn-xs" href="#" id="' + oObj.aData[9] + '" "><i class="glyphicon glyphicon-trash"></i> </a> ';
                                          }
                                      }

                ]
            });

            $("#from").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#to").datepicker("option", "minDate", selectedDate);
                }
            });
            $("#to").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                numberOfMonths: 3,
                dateFormat: 'dd-mm-yy',
                onClose: function (selectedDate) {
                    $("#from").datepicker("option", "maxDate", selectedDate);
                }
            });
            //------------Delete Record-------------//
            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');
                    base = window.location.origin;
                    $.post(base + "/ImportLorryHire/Del",
                           {
                               id: idx, fld: "Import_GATEOUT"  
                               //Export_GATEOUT
                           },
                         function (data, status) {
                             if (data == "") {
                                 alert("You are not Authorized to Delete....!");
                             }
                             else if (data != "Deleted successfully...") {
                                 alert(data);
                             }
                             else {
                                 alert(data);
                                 location.replace(base + "/ImportLorryHire");
                             }
                         });
                }
                return false;
            });//End
        });
    </script>
}