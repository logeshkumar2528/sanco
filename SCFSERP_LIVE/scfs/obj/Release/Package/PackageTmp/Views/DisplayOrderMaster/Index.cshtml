

@model IEnumerable<scfs_erp.Models.DisplayOrderMaster>

@{
    ViewBag.Title = "Display Order Master";
}

<div class="box">
    <div class="box-header">



        <div class="box-name">
            <i class="glyphicon glyphicon-share"></i><strong>@ViewBag.Title</strong>
        </div>
        <div class="box-icons">
            <button onclick="parent.location = '@Url.Action("Form","DisplayOrderMaster")'; return false;" class=" btn-success"> Create New </button>
        </div>
        <div class="no-move"></div>
    </div>
    <div class="box-content no-padding">

        <br />




        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="dataTables-example">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.DORDRDESC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DORDORDR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DISPSTATUS)
                    </th>

                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</div>
@section Scripts {

    <script>
        $(document).ready(function () {


            $('#dataTables-example').dataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("GetAjaxData", "DisplayOrderMaster")",
                "bProcessing": true,
                "bStateSave": true,

                "aoColumns": [

                    { "sName": "" },

                    { "sName": " ", "sClass": "action" },

                    { "sName": "" },
                    {
                        "sClass": "col-md-2 cent",
                        "sName": "ID",
                        "bSearchable": false,
                        "bSortable": false,
                        "fnRender": function (oObj) {
                            return ' <a   class=""  href="@Url.Action("Form", "DisplayOrderMaster")/' +
                                oObj.aData[3] + '\"  "><i class="glyphicon glyphicon-edit" style="color:#0000ff;font-size:medium"></i></a>  &nbsp;&nbsp;<a  class="del" href="#" id="' +
                                oObj.aData[3] + '\"><i class="glyphicon glyphicon-trash" style="color:#ff0000;font-size:large "></i> </a> ';
                        }
                    }

                ]
            });



            $(document).on("click", "a.del", function () {
                var r = confirm("Are you sure to delete this record ?");

                if (r == true) {
                    var idx = $(this).attr('id');

                    base = window.location.origin;



                    $.post(base + "/DisplayOrderMaster/Del",
                        {
                            id: idx, fld: ""
                        },
                        function (data, status) {

                            alert(data);

                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/DisplayOrderMaster");


                        });


                }
                return false;


            });

        });
    </script>
}