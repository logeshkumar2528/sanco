
@using scfs_erp.Models;
@model scfs_erp.Models.OpenSheetMaster

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

@{
    ViewBag.Title = "OOC No. / Date Updation Form";
}
<style>
    .frm_hide {
        display: none;
    }

    .ui-autocomplete {
        position: absolute;
        cursor: default;
        z-index: 4000 !important;
    }
</style>
<div class="modal-dialog">
    <div class="modal-content">
        <form id="Opensheettchaform" class="Opensheettchaform" method="post" action="@Url.Action("OpenSheet","oocsavedata")" autocomplete="on">
            <div class="modal-header">

                <h4 class="modal-title">OOC No Update</h4>
            </div>
            <div class="modal-body">
                <input type="text" id="TRANMID" class="TRANMID hide form-control" name="TRANMID" value="@ViewBag.TRANMID">
                <input type="text" id="OSMID" class="OSMID hide form-control" name="OSMID" value="@ViewBag.OSMID">


                <div class="form-group col-lg-12">

                    <div class="form-group col-lg-6">

                        <label>CHA(Tally) Name  </label>

                        <input type="text" class="OSMNAME form-control" name="OSMNAME" id="OSMNAME" value="@ViewBag.OSMNAME" readonly />
                        <input type="text" class="CHAID form-control hide" name="CHAID" id="CHAID" value="@ViewBag.CHAID" />


                    </div>

                    <div class="form-group col-lg-6">
                        <label>Date<span class="required-field"></span> </label>


                        <input type="text" id="OSMDATE" class="OSMDATE form-control" name="OSMDATE" value="@ViewBag.OSMDATE" readonly>

                    </div>

                    <div class="form-group col-lg-6">
                        <label>Opensheet No</label>
                        <input type="text" id="OSMDNO" class="OSMDNO form-control" name="OSMDNO" value="@ViewBag.OSMDNO" readonly="readonly">

                    </div>

                    <div class="form-group col-lg-6">
                        <label>OOC No</label>
                        <input type="text" id="OOCNO" class="OOCNO form-control" name="OOCNO" value="@ViewBag.OOCNO" maxlength="25" tabindex="">

                    </div>
                    <div class="form-group col-lg-6">
                        <label>OOC DATE</label>
                        <input type="text" id="OOCDATE" class="OOCDATE form-control" name="OOCDATE" value="@ViewBag.OOCDATE" maxlength="15">
                        @*@Html.TextBox("OOCDATE", "", new { @class = "form-control  OOCDATE", @value = ViewBag.OOCDATE,  @id = "OOCDATE", @data_val = false })*@
                    </div>




                </div>

                <div class="clearfix"> </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="btnclose" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="btnsave">Update</button>
                </div>
            </div>

        </form>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('input[id$=OOCDATE]').datepicker({
            dateFormat: 'dd/mm/yy',
            autoclose: true,
            endDate: "today",
            maxDate: new Date(),
            onClose: function (dateText, inst) {
                $("#OOCDATE").focus();
            }
        });
        $('.OOCDATE').removeClass('hasDatepicker');
        $(".datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
            maxDate: new Date()
        });
        $('#btnsave').click(function () {
            var flag = true;
            if ($("#OOCNO").val() == "") {
                alert('Please Enter OOC Number !!');
                $("#OOCNO").focus();
                flag = false;

            }
            if ($("#OOCDATE").val() == "") {
                alert('Please Enter OOCDATE !!');
                $("#OOCDATE").focus();
                flag = false;

            }

            var oocdate = $("#OOCDATE").val();      
            var today = new Date();
            //alert(today);
            var dd = String(today.getDate()).padStart(2, '0');
            var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
            var yyyy = today.getFullYear();

            var curdt = dd + '/' + mm + '/' + yyyy;
            var res = CompareDates(oocdate, curdt );
            if (res == 1) {
                alert('OOCDATE Should be less than or equal to Current Date!!');
                $("#OOCDATE").focus();
                flag = false;

            }

            if (flag) {

                tab = {
                    OSMID: $("#OSMID").val(),
                    OOCNO: $("#OOCNO").val(),
                    OOCDATE: $("#OOCDATE").val()

                }
                console.log(tab);
                var r = confirm("Are you sure to update?");
                if (r == true) {
                    $.ajax({
                        type: 'post',
                        url: '@Url.Action("oocsavedata", "OpenSheet")', // we are calling json method
                        data: tab,
                        success: function (data) {
                            if (data == "saved") {

                                var returnurl = '@Url.Action("Index", "OpenSheet")';
                                window.location.href = returnurl;

                                SwalSucMsg('OOC No is Updated Successfully!!');

                            }
                            else {
                                SwalSucMsg('You are not authorize to Update OOC No !!');

                                var returnurl = '@Url.Action("Index", "OpenSheet")';
                                window.location.href = returnurl;

                            }
                        }
                    });

                } else {

                    return false;

                }
            }
        });


        $('#btnclose').click(function () {
            base = window.location.origin;
            var url = base + "/OpenSheet/Index";
            window.location.href = url;
        });
    });

</script>