
@using scfs_erp.Models;
@model scfs_erp.Models.StagMaster

@{
    ViewBag.Title = "Stage Master";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
<section id="main-content">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="box">

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box">
                                <div class="box-header">
                                    <div class="box-name">
                                        <i class="fa fa-search"></i>
                                        <strong>Stag Master</strong>
                                    </div>
                                </div>
                                <div class="box-content" data-ng-app="myModule">
                                    <form action="@Url.Content("~/StagMaster/savedata")" method="post" accept-charset="utf-8" id="stagmasterform" data-ng-controller="myController" name="stagmasterform">
                                        @Html.ValidationSummary(true)
                                        <fieldset id="StagMasterForm_info">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="col-md-4 hidden">
                                                        <div class="form-group">
                                                            <label>Primary  </label>
                                                            @Html.TextBoxFor(model => Model.STAGID, new { @class = "form-control  STAGID", @id = "STAGID" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Code<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.STAGCODE)*@
                                                            @Html.TextBoxFor(model => Model.STAGCODE, new { @class = "form-control STAGCODE", @id = "STAGCODE" })
                                                            <input type="text" value="@Model.STAGCODE" name="i_STAGCODE" hidden>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Description<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.STAGDESC)*@
                                                            @Html.TextBoxFor(model => Model.STAGDESC, new { @class = "form-control  STAGDESC", @id = "STAGDESC" })
                                                            <input type="text" value="@Model.STAGDESC" name="i_STAGDESC" hidden>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Godown<span class="required-field"></span> </label>@*@Html.ValidationMessageFor(model => model.GDWNID)*@
                                                            @Html.DropDownList("GDWNID", null, "Please select an option", new { @class = "form-control", @data_val = "true", @data_val_required = "Field is required" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Status </label>
                                                            @Html.DropDownList("DISPSTATUS", null, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.DISPSTATUS)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 box-footer">
                                                    @*<input type="button" name="back" value="Go Back" class="btn btn-primary btn-xs pull-left" onclick="JavaScript:history.back()" />
                                        <input type="submit" name="submit" value="Submit" class="btn btn-success btn-xs" id="save" />*@
                                                    <a href="@Url.Action("Index", "StagMaster")" class="btn btn-primary btn-xs  pull-left" onclick="javascript:return confirm('Are you sure you want to go back?')">Go Back</a>
                                                    <input type="button" name="submit" value="Submit" class="btn btn-success btn-xs" id="btnsave" />

                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts{
    <script type="text/javascript" src="~/Scripts/CommonValidation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $('#btnsave').click(function () {
        if ($('#STAGCODE').val() == "") {
            alert('Please Enter Code !!');
            $('#STAGCODE').focus();
            return false;
        }
        if ($('#STAGDESC').val() == "") {
            alert('Please Enter Description !!');
            $('#STAGDESC').focus();
            return false;
        }
        if ($('#GDWNID').val() == "") {
            alert('Please Select Godown !!');
            $('#GDWNID').focus();
            return false;
        }

        var pdate = new Date();

        if ($('#STAGID').val() == "") { $('#STAGID').val(0); }

        var tab = {
            STAGID: $('#STAGID').val(),
            STAGCODE: $('#STAGCODE').val(),
            STAGDESC: $('#STAGDESC').val(),
            GDWNID: $('#GDWNID').val(),
            DISPSTATUS: $('#DISPSTATUS').val(),
            CUSRID: "",
            LMUSRID: 1,
            PRCSDATE: pdate
        };
        $.ajax({
            //url: "/StagMaster/savedata",
            url: "@Url.Action("savedata", "StagMaster")",
            data: JSON.stringify(tab),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (status) {
                if (status == "Update") {
                    alert('Stage Master Details Updated Successfully !! ');

                    var returnurl = "@Url.Action("Index", "StagMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Success") {
                    alert('Stage Master Details Inserted Successfully !! ');
                    var returnurl = "@Url.Action("Index", "StagMaster")";
                    window.location.href = returnurl;
                }
                else if (status == "Existing") {
                    alert('Stage Master Details Already Inserted !! ');
                    $('#STAGCODE').val("");
                    $('#STAGDESC').val("");
                    var returnurl = "@Url.Action("Form", "StagMaster")";
                    window.location.href = returnurl;
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });
    </script>


}


